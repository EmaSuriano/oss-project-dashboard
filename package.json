{
  "name": "oss-project-dashboard",
  "version": "1.0.0",
  "description": "A Dashboard to have a quick overview of Open Sources projects in your Github account ",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmaSuriano/oss-project-dashboard.git"
  },
  "keywords": [
    "github",
    "open source",
    "dashboard"
  ],
  "author": "Ema Suriano",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmaSuriano/oss-project-dashboard/issues"
  },
  "scripts": {
    "generate-validators": "ts-node --skip-project generate-validators.ts src/types",
    "prebuild": "yarn generate-validators",
    "start": "yarn generate-validators --watch & react-scripts start",
    "build": "CI=true react-scripts build",
    "test": "percy exec -t 350 -- cypress run",
    "test:open": "percy exec -t 350 -- cypress open",
    "test:ci": "start-server-and-test 3000",
    "png-to-jpg": "ls -1 ./docs/*.png | xargs -n 1 bash -c 'convert \"$0\" \"${0%.png}.jpg\"'",
    "optimize-images": "imageoptim './docs/*.jpg'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ],
  "homepage": "https://oss-dashboard.netlify.com/",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "apollo-boost": "^0.4.9",
    "graphql": "^14.7.0",
    "grommet": "^2.15.2",
    "query-string": "^6.13.7",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-gist": "^1.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-simple-code-editor": "^0.11.0",
    "react-syntax-highlighter": "^15.3.0",
    "react-tilt": "^0.1.4",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@percy/cypress": "^2.3.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/prismjs": "^1.16.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/styled-components": "^5.1.4",
    "chokidar": "^3.4.3",
    "cypress": "^5.6.0",
    "start-server-and-test": "^1.11.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "typescript-json-validator": "^2.4.2"
  }
}
